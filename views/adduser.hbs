                        <label for="lastname">First Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control email" name="email" id="email" onkeyup="emailval()"
                            placeholder="Email Address">
                        <small class="emailerror"></small>
                        <label for="email">Email Address</label>
                    </div>

                    <div class="form-floating mb-3">
                        <label for="gender"></label>
                        <select name="gender" id="gender" class="form-select">
                            <option value="N/A">Select</option>
                            <option value="Female">Female</option>
                            <option value="Male">Male</option>
                        </select>
                    </div>
                    <div class="mb-2 mt-2">
                        <p style="text-align: center;">Do You Agree With Terms and Condition</p>
                        <br>
                        <input type="checkbox" name="status" id="status" value="active"
                            style="display: block; margin:auto; margin-top: -2%;" required>
                    </div>


                    <div class="form-floating mb-3">
                        <input type="password" class="form-control password" onkeyup="pass()" name="password"
                            id="password" placeholder="Password">
                        <small class="passworderror"></small>
                        <label for="password">Password</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control passwordconfirm" name="passwordconfirm"
                            id="passwordconfirm" onkeyup="passmatch()" placeholder="Confirm Password">
                        <label for="passwordconfirm">Confirm Password</label>
                        <small class="passwordconfirmerror"></small>
                    </div>
                    <p style="text-align: center;">If you already have an account login <a href="/login">here</a></p>
                    <input type="submit" class="btn btn-primary register" value="Register">
