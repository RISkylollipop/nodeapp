        </header>

        <!-- Cards Section -->
        <section class="cards mb-4">
            <div class="card">
                <h3>Beds</h3>
                <p>86 Available Hospital Beds</p>
            </div>
            <div class="card">
                <h3>Doctors</h3>
                <p>126 Available Doctors</p>
            </div>
            <div class="card">
                <h3>Ambulances</h3>
                <p>32 Available Ambulances</p>
            </div>
        </section>

        <!-- Patient Table Section -->
        <div class="patient-table mb-4">
            <h3>Latest Patients</h3>
            <table class="table table-striped">
                <thead>

                    <tr>
                        <th>Name & Email Address</th>
                        <th>Ward No.</th>
                        <th>Priority</th>
                        <th>Appointment Type</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each dashrows}}
                    <tr>
                        <td>{{nameemail}}</td>
                        <td class="random">#123456</td>
                        <td style="color:orange;">Medium</td>
                        <td>{{appointment_type}}</td>
                    </tr>
                    {{/each}}
