        <div class="card">
            <div class="card-body">
                <form action="/doctor/schedules" method="post">

                    <label for="appointment_type">Select Appointment Type:</label><br>
                    <select name="appointment_type" id="appointment_type" required>
                        <option value="" disabled selected>Select</option>


                        <optgroup label="Primary and Preventive Care">
                            <option value=" Primary Care Consultation"> Primary Care Consultation</option>
                            <option value=" Routine Check-ups"> Routine Check-ups</option>
                            <option value="Follow-up Appointments"> Follow-up Appointments</option>
                            <option value="Prescription Refill"> Prescription Refill</option>
                        </optgroup>



                        <optgroup label="Specialist Care">
                            <option value="Specialist Consultation"> Specialist Consultation</option>
                            <option value="Chronic Disease Management"> Chronic Disease Management</option>
                            <option value="Sleep Disorder Consultation">Sleep Disorder Consultation</option>
                            <option value="Prenatal and Postnatal Care"> Prenatal and Postnatal Care</option>
                        </optgroup>


                        <optgroup label="Mental Health and Counseling">
                            <option value="Mental Health Counseling">Mental Health Counseling</option>
                            <option value="Stress and Anxiety Management">Stress and Anxiety Management</option>
                            <option value="Smoking Cessation Counseling">Smoking Cessation Counseling</option>
                            <option value="Lifestyle and Wellness Coaching">Lifestyle and Wellness Coaching</option>
                        </optgroup>


                        <optgroup label="Pediatric Care">
                            <option value="Pediatric Telemedicine">Pediatric Telemedicine</option>
                            <option value="Child Development Consultations">Child Development Consultations</option>

                        </optgroup>


                        <optgroup label="Urgent and Acute Care">
                            <option value="Urgent Care (Non-Emergency)">Urgent Care (Non-Emergency)</option>
                            <option value="COVID-19 Screening or Follow-Up">COVID-19 Screening or Follow-Up</option>

                        </optgroup>


                        <optgroup label="Rehabilitation and Support">
                            <option value="Physical Therapy Check-Ins">Physical Therapy Check-Ins</option>
                            <option value="Nutrition and Diet Counseling">Nutrition and Diet Counseling</option>
                        </optgroup>
                    </select>
                    <br><br>

                    <label for="email">Email:</label> <br>
                    <input type="email" name="email" required><br>

                    <label for="date">Schedule Date:</label>
                    <br>
                    <input type="datetime-local" name="appointment_date" id=""
                        required>

                    <br><br>

                    <div style="display: block; margin: auto 10% ">
                        Mark to confirm schedule:
                        <input type="checkbox" name="status" value="Scheduled" id="" required><br><br>
                        <textarea style="margin-left: -20px;" name="note" id="" cols="30px"
                            placeholder="Please Specify the Schecdule Details" required></textarea><br><br>
                        <input style="" type="submit" value="Add Schedule">
                    </div>
                </form>
            </div>
