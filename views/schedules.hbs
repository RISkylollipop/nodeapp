    <div class="container-fluid">
        <table class="table table-secondary mt-5 bordered">
            <h3 style="display: block; text-align:center; color: white;">Doctors Schedules</h3>
            <form class="d-flex" role="search" action="/schedules/find" method="post">
                <input class="form-control me-2 find" name="findschedule" type="search" placeholder="Search"
                    aria-label="Search">
                <button class="btn btn-outline-success subfind" style="position: absolute; right: 1%"
                    type="submit">Search</button>
            </form>
            <thead>

                {{!-- schedule_id, doctor_id, email, schedule_date, schedule_time, status, note, appointment_type --}}
                <tr class="theading">
                    <th scope="col">ID</th>
                    <th scope="col">Appointment Type</th>
                    <th scope="col">Doctor ID</th>
                    <th scope="col">Doctor Email</th>
                    <th scope="col">Schedule Date and Time</th>
                    <th scope="col">Status</th>
                    <th scope="col">Note</th>
                </tr>
            </thead>
            <tbody>
                {{#each rows}}
                <tr>
                    {{!-- schedule_id, doctor_id, email, schedule_date, schedule_time, status, note, appointment_type
                    --}}
                    <th scope="row">{{this.schedule_id}}</th>
                    <td>{{this.appointment_type}}</td>
                    <td>{{this.doctor_id}}</td>
                    <td>{{this.email}}</td>
                    <td style="max-height: 30px; overflow:hidden">{{this.schedule_date}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.note}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
