              {{message}}
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/if}}

            
            <h6 style="text-align: center; color: rgb(120, 244, 103)">Welcome Please be Aware that all input box are important!!!</h6>
           

          </div>
          <h4 style="text-align: center;">Book AppointMent</h4>
          <div class="text-end" style="margin-bottom: 20px;"><a href="/dashboard" class="btn btn-light"><i
                class="bi bi-backspace-reverse-fill"></i>Back</a></div>
          <div class="form-floating mb-3 mt-3">
            <input type="text" class="form-control" name="firstname" id="firstname" placeholder="Surname" required>
            <label for="firstname">Surname</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" class="form-control first" name="lastname" id="lastname" placeholder="First Given Name"
              required>
            <label for="lastname">First Name</label>
          </div>

          <div class="form-floating mb-3">
            <input type="email" class="form-control email" name="email" id="address" onkeyup="emailval()"
              placeholder="Email Address" required>
            <small class="emailerror"></small>
            <label for="email">Email Address</label>
          </div>

          <div class="form-floating mb-3">
            <input type="tel" class="form-control phone" name="phone" id="phone" placeholder="Phone Number" required>
            <label for="phone">Phone Number</label>
          </div>
          <div class="col-12 col-sm-6">
            <select class="form-select border-0" name="appointment_type" id="appointment_type" required>
              <option value="N/A" disabled selected>Select Case</option>
              <optgroup label="Minor Acute Illnesses">
                <option value="fever">Fever</option>
                <option value="cold-flu">Cold and Flu Symptoms</option>
                <option value="allergic-reaction">Mild Allergic Reactions</option>
              </optgroup>


              <optgroup label="Injury Management">
                <option value="minor-cuts">Minor Cuts or Wounds</option>
                <option value="sprains-strains">Sprains and Strains</option>
                <option value="minor-burns">Minor Burns</option>
              </optgroup>


              <optgroup label="Mental Health Crises">
                <option value="anxiety">Anxiety or Panic Attacks</option>
                <option value="suicidal-ideation">Suicidal Ideation</option>
              </optgroup>

              <!-- Pediatric Emergencies -->
              <optgroup label="Pediatric Emergencies">
                <option value="child-fever">Fevers in Children</option>
                <option value="dehydration">Dehydration Concerns</option>
                <option value="rashes">Rashes</option>
              </optgroup>


              <optgroup label="Chronic Disease Flare-Ups">
                <option value="asthma">Asthma Exacerbation</option>
                <option value="diabetic-issues">Diabetic Issues</option>
                <option value="hypertension">Hypertension</option>
              </optgroup>


              <optgroup label="Gastrointestinal Complaints">
                <option value="diarrhea-vomiting">Diarrhea or Vomiting</option>
                <option value="abdominal-pain">Abdominal Pain</option>
              </optgroup>


              <optgroup label="Skin and Soft Tissue Infections">
                <option value="cellulitis">Cellulitis or Abscesses</option>
              </optgroup>


              <optgroup label="Infectious Diseases">
                <option value="covid">COVID-19 Symptoms</option>
                <option value="uti">UTIs</option>
              </optgroup>


              <optgroup label="Eye, Ear, Nose, and Throat Issues">
                <option value="conjunctivitis">Conjunctivitis</option>
                <option value="ear-pain">Ear Pain</option>
                <option value="sore-throat">Sore Throat</option>
              </optgroup>


              <optgroup label="Prescription Issues">
                <option value="prescription-refills">Prescription Refills</option>
              </optgroup>


              <optgroup label="Travel-Related Concerns">
                <option value="travel-illness">Travel-Related Illnesses</option>
              </optgroup>


              <optgroup label="Emergency Triage">
                <option value="stroke-heart-attack">Suspected Stroke or Heart Attack
                </option>
              </optgroup>

            </select>
          </div>
          <div class="form-floating mb-3">
            <input type="date" class="form-control phone" name="appointment_date" id="appointment_date"
              placeholder="Appointment_date" required>
            <label for="appointment_date">Appointment_date</label>
          </div>
          <div class="form-floating mb-3">
            <input type="time" class="form-control phone" name="appointment_time" id="appointment_time"
              placeholder="Appointment_time" required>
            <label for="time">Appointment_time</label>
          </div>

          <label for="doctorlist">Select a doctor</label>
          <select name="doctorlist" id="doctorlist" style="width: 60%" required>
            <option value="N/A" selected disabled>Select Doctor</option>
            {{#each rows}}
            <option value="{{this.doctor_id}}">{{this.firstname}} , {{this.lastname}} [{{this.specialty}}]
              {{this.status}}</option>
            {{/each}}

          </select>
          <br>
          <div class="mt-4 mb-4">
            <textarea name="appointment_note" id="appointment" placeholder="Please Describe The Symptoms"
              required></textarea>
          </div>
          <br>
          <br>
          <p>Confirm Booking of this appointment<input type="checkbox" name="status" value="scheduled" id="Check"
              required> </p>

          <input type="submit" class="btn btn-primary register" value="Book AppointMent">

        </form>

